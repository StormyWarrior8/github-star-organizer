.navbar.navbar-inverse.navbar-fixed-top{ role: :navigation }
  .container
    .navbar-header
      = link_to 'Dashboard', root_path, class: 'navbar-brand'
    %ul.nav.navbar-nav.navbar-right
      - if current_user
        %li.user-name= current_user.name
        %li= link_to 'Logout', destroy_user_session_path, data: { method: :delete }, class: 'btn btn-link'
      - else
        %li= link_to "Github Auth", user_omniauth_authorize_path(:github), class: 'btn btn-link'
