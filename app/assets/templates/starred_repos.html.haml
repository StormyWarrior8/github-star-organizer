%h1
  Starred repositories
  -#= link_to sync_stared_repos_path, data: { remote: true, method: :put }, class: 'sync-button' do
  -#  %span.glyphicon.glyphicon-refresh
%ul#stared-repos.list-group
  %li.list-group-item.row{"ng-repeat"=>"repo in stared_repos"}
    .col-xs-2
      %a(ng-href="{{repo.html_url}}")
        {{repo.name}}
    .col-xs-4
      {{repo.description}}
    .col-xs-5
      %form{:data=>{:remote=>"true"}, "ng-submit"=>"updateRepo(repo.id, $index)"}
        %input.repo-tags{"ng-model"=>"repo.userTagList"}
    .col-xs-1
      %span.badge
        %span.glyphicon.glyphicon-star
        {{repo.stargazersCount}}
